<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_item_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nama Petugas"/>

    <TextView
        android:id="@+id/tv_item_lokasi_temuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi Temuan"
        android:layout_marginTop="4dp"/>


    <TextView
        android:id="@+id/tv_item_lokasi_dokumentasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi Temuan"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity=""
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: 0"/>

        <Button
            android:id="@+id/btn_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"/>
    </LinearLayout>

</LinearLayout>
